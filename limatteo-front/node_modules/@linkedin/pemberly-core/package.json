{
  "name": "@linkedin/pemberly-core",
  "version": "2.0.99",
  "description": "A collection of node scripts that support pemberly-web stack",
  "scripts": {
    "test": "qunit 'tests/**/*.test.js'",
    "test:unit": "qunit 'tests/unit/*.test.js'",
    "test:smoke": "qunit 'tests/smoke/*.test.js'",
    "lint": "eslint tests lib",
    "format": "prettier --write '{bin,lib,tests}/**/*.js'",
    "precommit": "lint-staged",
    "postinstall": "node-mp-bridge yarn:postinstall --milestone 1",
    "precommit:node-mp-bridge": "node-mp-bridge yarn:precommit --milestone 1 && git add product-spec.json",
    "doc": "ligradle -Prelease=true -PallArtifacts docs:generateDocsTgz docs:ivyForArchives docs:generateModuleArtifactSpec",
    "prepack": "yarn doc && ./bin/pemberly-core.js prepack",
    "postpack": "./bin/pemberly-core.js postpack"
  },
  "author": "thoover",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "ssh://git.corp.linkedin.com:29418/multiproducts/pemberly-core.git"
  },
  "bin": {
    "pemberly-core": "./bin/pemberly-core.js"
  },
  "devDependencies": {
    "@linkedin/eslint-plugin-pemberly": "^2.2.43",
    "@sinonjs/fake-timers": "^6.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fixturify": "^0.3.4",
    "husky": "^3.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "qunit": "^2.8.0",
    "tar": "^5.0.5",
    "testdouble": "^3.3.0",
    "xml2js": "^0.4.23",
    "xmldom": "^0.1.31"
  },
  "dependencies": {
    "@linkedin/node-mp-bridge": "^1.2.5",
    "bignumber.js": "^2.4.0",
    "broccoli-plugin": "^1.3.1",
    "console-ui": "^2.2.2",
    "dayjs": "^1.8.14",
    "deepmerge": "^4.0.0",
    "download": "7.1.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "globby": "^10.0.1",
    "hash-for-dep": "^1.4.7",
    "js2xmlparser": "^4.0.1",
    "jsdom": "^15.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.get": "^4.4.2",
    "moment": "^2.26.0",
    "node-fetch": "^2.2.0",
    "pretty-ms": "^5.0.0",
    "rimraf": "^3.0.2",
    "silent-error": "^1.1.1",
    "tmp": "^0.0.33",
    "walk-sync": "^2.1.0",
    "workerpool": "^2.3.3",
    "xml-js": "^1.6.8",
    "yargs": "^15.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit && yarn precommit:node-mp-bridge"
    }
  },
  "lint-staged": {
    "{lib,tests}/**/*.js": [
      "prettier --write",
      "git add",
      "eslint"
    ]
  },
  "files": [
    "bin/*",
    "docs/*",
    "lib/*"
  ],
  "volta": {
    "node": "10.18.1",
    "yarn": "1.22.4"
  }
}
